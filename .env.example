# Environment configuration for VPS deployment
# Copy this file to .env and update with your actual values

# RabbitMQ Configuration (external service)
RABBITMQ_HOST=your-rabbitmq-host
RABBITMQ_PORT=5672
RABBITMQ_USER=your-rabbitmq-user
RABBITMQ_PASS=your-rabbitmq-password
RABBITMQ_QUEUE=photo-uploads

# MySQL Configuration (external service)
MYSQL_HOST=your-mysql-host
MYSQL_PORT=3306
MYSQL_USER=your-mysql-user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=bee_detection

# External Docker Network (if RabbitMQ and MySQL are in containers)
EXTERNAL_NETWORK_NAME=bee-network

# Processing Configuration
BACKGROUND_SIZE=15
SAVE_INTERMEDIATE=true
BACKGROUND_UPDATE_FREQ=1
HIVE_ID=HIVE_01

# Detection Configuration
MIN_BEE_AREA=20
MAX_BEE_AREA=8000
MIN_ASPECT_RATIO=0.3
MAX_ASPECT_RATIO=3.0
MIN_SOLIDITY=0.3
